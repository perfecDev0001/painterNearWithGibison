# Painter Near Me Application Configuration - EXAMPLE
# Copy this file to project.env and fill in your actual values
# DO NOT commit project.env to version control

# Gibson AI Database Configuration (Primary Database)
GIBSON_API_KEY=your_gibson_api_key_here
GIBSON_API_URL=https://api.gibsonai.com
GIBSON_DATABASE_ID=your_database_id_here
GIBSON_PROJECT_ID=your_project_id_here
GIBSON_PROJECT_NAME=Painter Marketplace Backend
GIBSON_DEVELOPMENT_MODE=false
GIBSON_ENABLED=true

# Fallback MySQL Database (Optional - for local caching/sessions)
DB_HOST=localhost
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_DATABASE=your_database_name
DB_PORT=3306
DB_CHARSET=utf8mb4

# Email Configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USERNAME=your_email_username
SMTP_PASSWORD=your_email_password
SMTP_FROM_EMAIL=no-reply@yourdomain.com
SMTP_FROM_NAME=Your App Name

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8088

# Security Settings
SESSION_TIMEOUT=3600
CSRF_TOKEN_LIFETIME=3600
FORCE_HTTPS=false

# Additional Settings
MAINTENANCE_MODE=false
MAX_UPLOAD_SIZE=10M
CACHE_ENABLED=true
LOG_LEVEL=DEBUG